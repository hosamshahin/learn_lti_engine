<section class="header">
{{#if model.isCompleted}}
  <div class="row">
    <div class="small-10 columns">
      <h2>{{model.title}}</h2>
      <p>{{model.description}}</p>
    </div>
    <div class="small-2 columns">
      <img src="<%= asset_path("learn_lti_engine/you-are-awesome-1.png") %>" />
    </div>
  </div>
{{else}}
  <h2>{{model.title}}</h2>
  <p>{{model.description}}</p>
{{/if}}
</section>

<div class="row">
  <div class="large-3 medium-4 columns">
    <ul class="side-steps">
      {{#each step in model.steps}}
        <li {{bind-attr class=":step step.isActive:active step.isCompleted:step-completed"}} {{action 'goToStep' step}}>
          {{#if step.isCompleted}}
            <i class="fa fa-check-circle right"></i>
          {{else}}
            <i class="fa fa-circle-thin right"></i>
          {{/if}}
          {{step.name}}
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="large-9 medium-8 columns step-contents">
    {{render 'step' model.currentStep}}
  </div>
</div>

